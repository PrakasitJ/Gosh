{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Gosh",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#class-keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#native-code"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.gosh",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.import.gosh",
          "match": "\\b(native_import|import)\\b"
        },
        {
          "name": "keyword.control.gosh",
          "match": "\\b(if|else|for|while|return|func|class)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.gosh",
          "match": "\\b(int|string|bool|float)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.gosh",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.numeric.gosh",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gosh",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gosh",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "native-code": {
      "patterns": [
        {
          "name": "meta.native.gosh",
          "begin": "(^|\\G)(::)",
          "beginCaptures": {
            "2": {
              "name": "punctuation.definition.native.gosh"
            }
          },
          "end": "$"
        }
      ]
    },
    "class-keywords": {
      "patterns": [
        {
          "name": "keyword.other.gosh",
          "match": "\\b(new|void)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.gosh",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.gosh",
          "match": "[+\\-*/]"
        },
        {
          "name": "punctuation.definition.group.gosh",
          "match": "[(){}]"
        },
        {
          "name": "punctuation.terminator.statement.gosh",
          "match": ";"
        },
        {
          "name": "punctuation.separator.gosh",
          "match": ","
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.gosh",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.gosh"
}

